<% @page_name = "New Transaction" %>
<% @back = category_transactions_path(@id)%>

<div class='transaction-form'>
  <%= form_with url: category_transactions_path, scope: :transaction  do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :amount %><br />
      <%= f.number_field :amount %>
    </div>

    <div class="field">
      <%= f.label :category %><br />
      <%= f.collection_select :category_id, Category.where(user_id: current_user.id).order(:name),:id,:name %>
    </div>

    <%= f.submit "Create Transaction" %>
  <% end %>

    <div >
    <%= link_to "Back to transaction", category_transactions_path, class: "back-page" %>     
  </div>
</div>